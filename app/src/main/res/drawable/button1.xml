<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0a0a0a" /> <!-- Pressed fill -->
            <stroke android:width="1dp" android:color="#fafafa" /> <!-- Stroke color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0a0a0a" /> <!-- Normal fill -->
            <stroke android:width="1dp" android:color="#fafafa" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>